  position: relative;
}
.SysImg image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}
.SysImg{
  display: flex;
}
.niceName{
  color: #7689d2;
  font-family: "PingFangSC-Medium";
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.Comnents{
  color: #071756;
  font-family: "PingFangSC-Regular";
  font-size: 24rpx;
}
.time{
  color: #afb6d3;
  font-family: "PingFangSC-Regular";
  font-size: 24rpx;
}
.active{
  color: #afb6d3;
  font-family: "PingFangSC-Regular";
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.active::after{
  content: '';
  width: 16rpx;
  height: 16rpx;
  background-color: #ff2851;
  position: absolute;
  top: 66rpx;
  right: 15rpx;
  border-radius: 50%;
}
