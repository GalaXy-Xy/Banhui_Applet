  width: 100%;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
}
.NoClassContent image{
  width: 40rpx;
  height: 24rpx;
}
.NoClassContent text{
  color: #afb6d3;
  font-family: "PingFangSC-Regular";
  font-size: 28rpx;
  margin: 0 20rpx;
  font-weight: 400;
}
.NoClassContent .reserve{
  transform:scaleX(-1);
}
.NoContent{
  width: 220rpx;
  height: 212rpx;
  margin: 0 auto;
  margin-top: 50%;
  text-align: center;
}
.NoContent image{
  width: 100%;
  height: 100%;
}
.NoContent text{
  font-size: 32rpx;
  color: #7689d2;
}

