/* pages/login-content/index.wxss */
.titleBar {
    width: 750rpx;
    height: 88rpx;
    padding: 40rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between

}
.right-text{
    width: 80rpx;
    height: 50rpx;
    color: #5276f2;
    font-family: "PingFangSC-Medium";
    font-size: 40rpx;
    font-weight: 400;
    line-height: 50rpx;
    margin-right: 40rpx;
    position: relative;
}
.left-text{
    width: 44rpx;
    height: 36rpx;
    color: #afb6d3;
    font-family: "PingFangSC-Medium";
    font-size: 28rpx;
    font-weight: 400;
    line-height: 36rpx;
}
/* 选中样式 */
.active{
    width: 80rpx;
    height: 50rpx;
    color: #5276f2;
    font-family: "PingFangSC-Medium";
    font-size: 40rpx;
    font-weight: 400;
    line-height: 50rpx;
    margin-right: 40rpx;
}
.active::before{
    content: '';
    position: absolute;
    bottom: -16rpx;
    left:50%;
    width: 10rpx;
    height: 10rpx;
    background-color: #5276f2;
    border-radius: 50%;
}
.img-right{
    width: 60rpx;
    height: 60rpx;
    position: relative;
}
.img{
    width: 100%;
    height: 100%;
    position: absolute;
    right: 0px;
}
/* <!-- 标题切换end --> */

.content{
    width: 710rpx;
    /* height: 114px; */
    margin: 48rpx 24rpx 0;
    box-sizing: border-box;
    border-bottom: 1px solid #eef0fa;
}
.top-content{
    display: flex;
    justify-content: space-between;
    padding: 0 16rpx;
    box-sizing: border-box;
}
/* 上部分 */
.left-top{
    flex: 1;
    width: 450rpx;
    height: 136rpx;
    line-height: 48rpx;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}
.left-top-text{
    color: #071756;
    font-family: "PingFangSC-Regular";
    font-size: 32rpx;
    font-weight: 400;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical  
}
.left-bot-text{
    /* width: 24px; */
    height: 36rpx;
    color: #afb6d3;
    font-family: "PingFangSC-Regular";
    font-size: 24rpx;
    font-weight: 400;
    line-height: 36rpx;
}
.right-top{
    width: 228rpx;
    width: 196rpx;
    border-radius: 5px;
}
.right-img1{
    width: 100%;
    height: 100%;
    margin-left: 20rpx;
}
/* 下部分 */
.bot-content{
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    padding: 0 16rpx;
}
.bot-img{
    width: 32rpx;
    height: 32rpx;
    border-radius: 6rpx;
    vertical-align: middle;
    margin-right: 20rpx;
}
.bot-text{
    width: 456rpx;
    height: 32rpx;
    color: #7689d2;
    font-family: "PingFangSC-Medium";
    font-size: 24rpx;
    font-weight: 400;
}
