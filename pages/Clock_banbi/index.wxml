<!--pages/userInfo/index.wxml-->
<view class="uesrInfo">   
     <scroll-view class="scroll" scroll-x="true" scroll-x>
             <!-- 我的金币 -->
        <view class="classMessage">
            <view class="rule"  bindtap="look_g">
                <image class="ruleImg" src="/static/images/guize.png"></image>查看规则
            </view>
            <view class="banbi">{{myClock}}</view>
            <view class="my_banbi">我的斑币</view>
            <view class="bot-my">
                <text>每日机会</text>
                <text><text class="spc_my">{{count_now}}</text>/{{jl_maxcount}}</text>
           </view>
           <progress percent="{{percent}}" activeColor="#5276f2" backgroundColor="#EBEBEB" active stroke-width="6" border-radius="8"></progress>
            <!-- <view class="jindu"></view> -->
        </view>
        <!-- 班级金币 -->
        <view class="classMessage" hidden="{{banbi_all}}">
            <view class="rule" bindtap="look_g">
                <image class="ruleImg" src="/static/images/guize.png"></image>查看规则
            </view>
            <view class="banbi">{{clock_All}}</view>
            <view class="my_banbi">班级的斑币</view>
            <view class="bot-user">
                <image class="bot-img" src="{{src + class_img}}"></image>
                <text class="bot-text">班级:{{class_name}}</text>
            </view>
        </view>

    </scroll-view>
    <!-- tab切换 -->
      <!-- active控制选中标签 -->
    <view class="Tabs">
      <text class="{{seleted==1?'tab active':'tab'}}" data-num="1" bindtap="seletednow">本班排行</text>
      <text class="{{seleted==2?'tab active':'tab'}}" data-num="2" bindtap="seletednow">总排行榜</text>
    </view>
    <!--tab切换end  -->

    <!-- 本班排行页面 -->
    <view class="{{seleted==1?'':'pageMoney'}}">
        <!-- 列表区域 -->
        <view class="Lists" wx:for="{{class_benban}}" wx:key="index">
            <!-- 排行 -->
              <view class="{{class_benban.length < 4?'RankFourlaster':'Rank'}}">
               <block>
                    <view wx:if="{{index+1 >=4 }}">{{index+1}}</view>
                     <image src="/static/images/NO{{index+1}}.png" wx:if="{{index+1 <=3 }}"></image>
                </block>
                    <!-- {{class_benban.length < 4? '':index+1}}
                    <image src="/static/images/NO{{index+1}}.png" hiddden="{{Imgs}}"></image> -->
                </view>
            <!-- 个人信息 -->
            <view class="userInfoLists" wx:for="{{item.bhuser}}" wx:for-item="bhuser">
              <view class="userInfoImg"><image src="{{bhuser.user_avatar == '' ||  bhuser.user_avatar == 'kong'?'/static/images/NoImg.png' : src + bhuser.user_avatar}}"></image></view>
              <view class="uesrInfoMessage">
                  <view>{{bhuser.user_nickname}}</view>
                  <view class="gens" wx:if="{{bhuser.user_gender == 2}}">
                      <image class="sex_nv" src="/static/images/sex_nv.png"></image>
                      <text class="nv_wen">女</text>
                  </view>
                  <view class="gens nan" wx:if="{{bhuser.user_gender == 1}}">
                    <image class="sex_nv nan_tu" src="/static/images/sex_nan.png"></image>
                    <text class="nv_wen nan_wenzi">男</text>
                  </view>
                  <!-- <view>
                    <image src="{{showGen?'/static/images/sex-Wom.png':'/static/images/sex-Man.png'}}" hidden="{{NoGen}}"></image>
                  </view> -->
              </view>
            </view>
            <!-- 总数量 -->
            <view class="SumFans" wx:for="{{item.bhuser}}" wx:for-item="bhuser">{{bhuser.user_gold}}</view>
        </view>
    </view>
    <!-- 班币排行页面end --> 

    <!-- 总排行页面 -->
    <view class="{{seleted==2?'':'pageArticle'}}">
        <!-- tab切换 -->
        <view class="Tabs2">
            <text class="{{seleted_z==3?'tab2 active2':'tab2'}}" data-num="3" bindtap="selecte_z" >同学</text>
            <text class="{{seleted_z==4?'tab2 active2':'tab2'}}" data-num="4" bindtap="selecte_z" >班级</text>
        </view>
         <!-- 同学列表区域 -->
        <view class="{{seleted_z==3?'':'tx_zph'}}">
            <view class="Lists" wx:for="{{calss_All}}"  wx:key="index">
                <!-- 排行 -->
                  <view class="{{calss_All.length < 4?'RankFourlaster':'Rank'}}">
                     <block>
                        <view wx:if="{{index+1 >=4 }}">{{index+1}}</view>
                        <image src="/static/images/NO{{index+1}}.png" wx:if="{{index+1 <=3 }}"></image>
                    </block>
                    <!-- {{banji_ALL.length < 4? '':index+1}}
                    <image src="/static/images/NO{{index+1}}.png" hiddden="{{Imgs}}"></image> -->
                </view>
                <!-- 个人信息 -->
                <view class="userInfoLists" wx:for="{{item.bhuser}}" wx:for-item="bhuser">
                    <view class="userInfoImg"><image src="{{bhuser.user_avatar == '' || bhuser.user_avatar == 'kong'?'/static/images/NoImg.png' : src + bhuser.user_avatar}}"></image></view>
                    <view class="uesrInfoMessage">
                        <view>{{bhuser.user_nickname}}</view>
                        <view class="gens" wx:if="{{bhuser.user_gender == 2}}">
                            <image class="sex_nv" src="/static/images/sex_nv.png"></image>
                            <text class="nv_wen">女</text>
                        </view>
                        <view class="gens nan" wx:if="{{bhuser.user_gender == 1}}">
                            <image class="sex_nv nan_tu" src="/static/images/sex_nan.png"></image>
                            <text class="nv_wen nan_wenzi">男</text>
                        </view>
                        <!-- <view> 
                            <image src="{{showGen_all?'/static/images/sex-Wom.png':'/static/images/sex-Man.png'}}" hidden="{{NoGen_all}}"></image>
                        </view> -->
                    </view>
                </view>
                <!-- 总数量 -->
                <view class="SumFans">{{item.sum_gold}}</view>
            </view>
        </view>
        <!-- 班级列表区域 -->
        <view class="{{seleted_z==4?'':'bj_zph'}}">
            <view class="Lists" wx:for="{{banji_ALL}}" wx:key="index">
                <!-- 排行 -->
                <view class="{{banji_ALL.length < 4?'RankFourlaster':'Rank'}}">
                 <block>
                    <view wx:if="{{index+1 >=4 }}">{{index+1}}</view>
                     <image src="/static/images/NO{{index+1}}.png" wx:if="{{index+1 <=3 }}"></image>
                </block>
                  
                </view>
                <!-- 班级信息 -->
                <view class="userInfoLists">
                    <view class="userInfoImg"><image src="{{item.bhc.class_avatar == '' || item.bhc.class_avatar == 'kong'?'/static/images/NoImg.png' : src + item.bhc.class_avatar}}"></image></view>
                    <view class="uesrInfoMessage">
                        <view>{{item.bhc.class_name}}</view>
                        <text>{{item.bhpost.post_comments}}条更新</text>
                    </view>
                </view>
                <!-- 总数量 -->
                <view class="SumFans">{{item.sum_gold}}</view>
            </view>

        </view>
    </view>
    <!-- 帖子页面end -->

    <!-- 底部-个人排行信息 -->
    <view class="RankUserInfo" bindtap="add_banbi">
            <view class="{{count_now == jl_maxcount?'btn_banbi btn_banbi_NO':'btn_banbi'}}">
                <image src="{{count_now == jl_maxcount?'/static/images/banbi_no.png':'/static/images/banbi.png'}}"></image>
                斑币+1
            </view>
    </view>

    <!-- 规则 -->
    <view class="container1" hidden="{{guize}}">
            <view class="title_p">
            <view class="icon-x icon-p" bindtap="close_g"></view>
            <view class="name_p">获得斑币规则</view>
            <!--未选择默认是btn_p 有选择的图片是btn_sel -->
            <!-- <view class="{{btn_color?'btn_p':'btn_p btn_sel'}}" bindtap="uploadFile">发布</view> -->
            </view>
            <view class="con_card">
                <view class="text_g">1.点击“斑币+1”按钮，播放视频结束后，即获得 1 个斑币，所在班级同时也获得 1 个斑币；</view>
                <view class="text_g">2.每天默认有 10 次获得斑币的机会；</view>
                <view class="text_g">3.<text>主动发帖 1 次，或者回帖 1 次</text>，均可增加一次机会；</view>
                <view class="text_g">(内容违规被管理员删除，会被扣除 2 斑币)</view>
                <view class="text_g">4.新增加的机会当天可累积，第二天零点清除，恢复到默认的10次机会。</view>
            </view>
    </view>
    <!-- 弹窗 -->
    <view class="toast" hidden="{{toast}}">
        <view class="toast_item">
            <image src="/static/images/gongxi.png"></image>
            <view>恭喜您</view>
            <view>获得1个斑币</view>
        </view>
    </view>
       
</view>
<!-- 广告 -->
    <view class="guang" hidden="{{guang}}">
        <view class="icon-x icon-cancel" bindtap="close_gg"></view>
        <image src="{{src + src_g}}"></image>
    </view>
<!-- 弹窗--次数用完 -->
    <view class="Noconunt" hidden="{{Nocount}}">
        <view class="hihtId" >
        <view class="h1">今日机会已用完</view>
        <view class="h2">做任务</view>
        <view class="h3">可获得额外的机会，详情点击查看规则~~~</view>
        <view class="line"></view>
        <view class="h4" bindtap="konw">知道了</view>
        </view>
    </view>
<view>

</view>

