/* 选中样式 */
.active{
    width: 80rpx;
    height: 50rpx;
    color: #5276f2;
    font-family: "PingFangSC-Medium";
    font-size: 40rpx;
    font-weight: 400;
    line-height: 50rpx;
    margin-right: 40rpx;
}
.active::before{
    content: '';
    position: absolute;
    bottom: -16rpx;
    left:50%;
    width: 10rpx;
    height: 10rpx;
    background-color: #5276f2;
    border-radius: 50%;
}

.img-right{
    width: 60rpx;
    height: 60rpx;
    position: relative;
}
.img{
    width: 100%;
    height: 100%;
    position: absolute;
    right: 0px;
}
